    "webpack": "^4.35.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.0.1",
    "md5": "^2.2.1",
