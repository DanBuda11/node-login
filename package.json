  "engines": {
    "node": ">=10.5.0"
  },
  "description": "Validated and authenticated user login backend with Node.js",
  "main": "index.js",
  "scripts": {
    "start": "node ./start.js",
    "watch": "nodemon ./start.js --ignore public/",
    "dev": "concurrently 'npm run watch' 'npm run assets'",
